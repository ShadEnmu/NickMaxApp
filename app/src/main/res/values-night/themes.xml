<resources>

    <style name="Theme.NickMaxApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/gray_light</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/orange</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <item name="android:statusBarColor">@color/orange_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BnvMiddleButton" parent="ThemeOverlay.Material3.FloatingActionButton.Primary">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:color">@color/gray</item>
    </style>

    <style name="SimpleWorkoutButton" parent="Widget.AppCompat.Button">
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AddWorkoutButton" parent="SimpleWorkoutButton">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/workout_button_shape</item>

    </style><style name="AddWorkoutFromHistoryButton" parent="SimpleWorkoutButton">
    <item name="android:textColor">@color/orange</item>
    <item name="background">@drawable/add_from_history_outlined_button</item>
</style>
</resources>